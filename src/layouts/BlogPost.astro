---
import { colorBaseClasses, colorAccentClasses } from "src/colors";
import { ACCENT_COLOR, BASE_COLOR } from "../config.json";

const { includeSearch } = Astro.props;
---

{
  includeSearch ? (
    <main
      data-pagefind-body
      class={
        "prose prose-img:rounded-xl dark:prose-invert prose-a:no-underline prose-inline-code:bg-base-100 dark:prose-inline-code:bg-base-800 prose-inline-code:p-1 prose-inline-code:rounded-md " +
        colorBaseClasses[BASE_COLOR] +
        " " +
        colorAccentClasses[ACCENT_COLOR]
      }
    >
      <slot />
    </main>
  ) : (
    <main
      class={
        "prose prose-img:rounded-xl dark:prose-invert prose-a:no-underline prose-inline-code:bg-base-100 dark:prose-inline-code:bg-base-800 prose-inline-code:p-1 prose-inline-code:rounded-md " +
        colorBaseClasses[BASE_COLOR] +
        " " +
        colorAccentClasses[ACCENT_COLOR]
      }
    >
      <slot />
    </main>
  )
}
